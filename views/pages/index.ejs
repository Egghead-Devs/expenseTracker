
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark"><%= title %> </h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active">Dashboard</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
      <div class="container-fluid">
        <!-- Small Cards Start -->
        <div class="row">
            <div class="col-lg-3 col-6">
              <!-- small box -->
              <div class="small-box bg-info">
                <div class="inner">
                  <h3><%= expenseCount.count %></h3>
  
                  <p>Number of Expenses</p>
                </div>
                <div class="icon">
                  <i class="ion ion-bag"></i>
                </div>
                <a href="/expense/expenses" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
              </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
              <!-- small box -->
              <div class="small-box bg-success">
                <div class="inner">
                  <h3><sup style="font-size: 20px">‎₦</sup><%=Number (totalSum).toLocaleString(); %></h3>
  
                  <p>Expenses Today</p>
                </div>
                <div class="icon">
                  <i class="ion ion-stats-bars"></i>
                </div>
                <a href="/expense/expenses" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
              </div>
            </div>
            <div class="col-lg-3 col-6">
              <!-- small box -->
              <div class="small-box bg-warning">
                <div class="inner">
                  <h3><%= employeeCount.count %></h3>
  
                  <p>Employees</p>
                </div>
                <div class="icon">
                  <i class="ion ion-person-add"></i>
                </div>
                <a href="/expense/employees" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
              </div>
            </div>
        </div>
  <!-- Small Cards Start -->
  <div class="row">
    <div class="col-lg-3 col-6">
      <!-- small box -->
      <div class="small-box bg-purple">
        <div class="inner">
          <h3><%=  %></h3>

          <p>Expenses By Department</p>
        </div>
        <div class="icon">
          <i class="ion ion-stats-bars"></i>
        </div>
        <a href="/expense/expenses" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
      </div>
    </div>
    <!-- ./col -->
      <!-- Small Cards Start -->
      
        <div class="col-lg-3 col-6">
          <!-- small box -->
          <div class="small-box bg-maroon">
            <div class="inner">
              <h3><%=  %></h3>

              <p>Expenses By Category</p>
            </div>
            <div class="icon">
              <i class="ion ion-stats-bars"></i>
            </div>
            <a href="/expense/expenses" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
          </div>
        </div>
      
        <!-- ./col -->
         <!-- Small Cards Start -->
      
         <div class="col-lg-3 col-6">
          <!-- small box -->
          <div class="small-box bg-navy">
            <div class="inner">
              <h3><%=  %></h3>
              <p>Expenses By Types</p>
            </div>
            <div class="icon">
              <i class="ion ion-stats-bars"></i>
            </div>
            <a href="/expense/expenses" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
          </div>
        </div>
      </div>
        <!-- Small Cards Ends -->

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                      <h3 class="card-title">All Expenses</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                      <table id="example2" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Title</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Employee</th>
                            <th>Time</th>
                        </tr>
                        </thead>
                        <tbody>
                            <% expenses.forEach(function(expense) { %>
                        <tr>
                          <td><%= expense.title %></td>
                          <td>‎₦<%=Number(expense.amount).toLocaleString(); %></td>
                          <td>
                            <% if (expense.status == 'Approved' ) { %>
                              <p class="badge badge-success"><%= expense.status %></p>
                              <% } else if (expense.status == 'Disapproved') { %>
                              <p class="badge badge-danger"><%= expense.status %></p>
                              <% } else { %>
                              <p class="badge badge-warning"><%= expense.status %></p>
                              <% } %>
                          </td>
                          <td><%= expense.Employee.first_name %> <%= expense.Employee.last_name %></td>
                          <td><%= moment(expense.createdAt).fromNow() %></td>
                        </tr>
                            <% }); %>
                        </tbody>
                        <tfoot>
                        <tr>
                            <th>Title</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Employee</th>
                            <th>Time</th>
                        </tr>
                        </tfoot>
                      </table>
                    </div>
                    <!-- /.card-body -->
                  </div>
                  <!-- /.card -->
            </div>
        </div>

        
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->