<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid" >
    <div id="action" ></div>
      
  <div class="">
      <h6 class="text-danger" id="errDisplay"></h6>
  </div>
  
  <div class="kt-portlet kt-portlet--mobile">
		<div class="kt-portlet__head kt-portlet__head--lg">
			<div class="kt-portlet__head-label">
				<h3 class="kt-portlet__head-title">
					List of all expenses for "<%= role.role_name %>" Role
				</h3>
			</div>
		</div>
	
		<div class="kt-portlet__body">
	    <% if (role.users.length == 0 ) { %>
		    <div class="alert alert-light alert-elevate" role="alert">
      		<div class="alert-icon"><i class="flaticon-warning kt-font-brand"></i></div>
      		<div class="alert-text">
      			<h3 class="kt-portlet__head-title">
      			  Oops! No employees for this role yet
      			</h3>
      		</div>
      	</div>
			<% } else { %>
			
			<!--begin: Datatable -->
			
			<table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
				<thead>
					<tr>
            <th>User</th>
						<th>Email</th>
						<th>Department</th>
						<th>Role</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% role.users.forEach(function(employee) { %>
					<tr>
            <td>
              <div class="kt-user-card-v2">
								<div class="kt-user-card-v2__pic">
									<img src="/assets/media/users/100_3.jpg" alt="photo">
								</div>
								<div class="kt-user-card-v2__details">
									<a href="/employee/<%= employee.id %>" class="kt-user-card-v2__name"><%= employee.firstname ? employee.firstname + ' ' + employee.lastname : employee.name %></a>
									<span class="kt-user-card-v2__desc"><%= employee.Role.role_name %></span>
								</div>
							</div>
            </td>
            <td><%= employee.email %></td>
						<td><%= employee.Department.dept_name %></td>
						<td><%= employee.Role.role_name %></td>
						<td nowrap> 
							<a href="/employee/<%= employee.id %>" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="View">
								<i class="la la-eye"></i>
							</a>
							<a class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Delete" onclick="deleteEmployee(<%=employee.id%>)">
								<i class="la la-trash"></i>
							</a>
							
						</td>
					</tr>
					<% }); %>
					
				</tbody>
			</table>

			<!--end: Datatable -->
			<% } %>
		</div>
	</div>
    
</div>
<script src="/assets/js/scripts/role/roleDetailAction.js" type="text/javascript"></script>
<script>
  const userId = `<%= user.id %>`;
  const userRole = `<%= user.Role.role_name %>`;
  const roleId = `<%= id %>`;
  
  action(typeId, userRole);
  
</script>